<!DOCTYPE html>
<html lang="en">

<%- include ('./partials/head') %> 
<body>

    <%- include ('./partials/header') %>
    <main class="contenedor">
        <div class="container-form">
            <div  class="tittle"> 
                <h4 class="tittle_modify">Crear Producto<span class="punto-amarillo">.</span></h4>
            </div>  
            <form class="form_modify" action="/products" method="POST" enctype="multipart/form-data">
                 <div class="form_divs double_slot">
                    <div class="form-image">
                        <label for="category" class="form-label">Categoría:</label>
                        <select class="form-reg" name="category" id="category" class="form-input">
                            <option value="">Elegí</option>
                            <option value="1">Nuevo</option>
                            <option value="2">Retro</option>
                        </select>
                    </div>
                    <div class="form-image">
                        <input type="checkbox" id="1" name="size" value="1"> 8
                        <input type="checkbox" id="2" name="size" value="2"> 9
                        <input type="checkbox" id="3" name="size" value="3"> 10
                        <input type="checkbox" id="4" name="size" value="4"> 11
                    </div>
                </div>
                <div class="form_divs">
                    <label for="name" class="form-label">Nombre:</label>   
                    <input class="input_slot" type="text" name="name" id="name"> 
                </div> 
                <div class="form_divs">
                    <label for="descripcion" class="form-label">Descipción:</label>
                    <textarea class="text_area input_slot" name="description" id="description" class="form-input"></textarea>
                </div>
                <div class="form_divs">
                    <label for="stock" class="form-label">Stock:</label>   
                    <input class="input_slot" type="text" name="stock" id="stock" value="Stock"> 
                </div> 
                <div class="double_slot form_divs">                  
                    <div class="form-image">
                        <label for="image" class="form-label">Fotografia:</label>
                        <input class="image-reg" type="file" name="image" id="image">
                    </div>
                    <div class="slot price_slot">
                        <label for="price" class="form-label">Precio:</label>
                        <input class="input_slot" type="text" name="price" id="price">
                    </div>
                </div>
                <div class="buttons buttons_edit">
                    <div>
                        <button class="default_button" type="submit">Guardar</button>
                    </div>
                    <div>
                        <button class="default_button reset_button" type="reset" name="eliminar" id="eliminar">Borrar Datos</button>
                    </div>
                </div>      
            </form>
        </div>
    </main>

    <%- include ('./partials/footer') %>
</body>
</html>