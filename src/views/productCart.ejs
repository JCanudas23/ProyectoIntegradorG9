<!DOCTYPE html>
<html lang="en">
  <%- include ('./partials/head') %>
  <body>
    <%- include ('./partials/header') %>
    <main class="cart">
            <h4 class="cart__title contenedor">
                Bolsa de compras<span class="punto-amarillo">.</span>
              </h4>
              <% products.forEach(function(product){%>
              <section class="cart__product contenedor">
                  <a class="cart__product-img" href="/products/detail/<%= product.id %>">
                      <img  src="/img/products/<%= product.Image[0].image %>" alt="product-Image"/>
                  </a>
                  <div class="cart__product-description">
                      <p class="cart__product-price"><span class="currency-symbol"> $ </span><%= product.price %></p>
                      <p class="cart__product-name"><%= product.name %></p>
                      <p class="cart__product-size">Size 10</p>
                  </div>
              </section>
        <% }) %>
          <div class="cart__costs">
            <ul class="cart__costs-list">
              <li class="">Sub Total: $250</li>
              <li class="">Envio: $55.00</li>
              <li class="costs-list--total">Total: $305</li>
            </ul>
          </div>
          <div class="cart__button">
            <a href="/">Finalizar compra</a>
          </div>
        </div>
      </div>
      <div class="contenedor">
        <%- include ('./partials/newsletter') %>
      </div>
    </main>
    <%- include ('./partials/footer') %>
  </body>
</html>
