<!DOCTYPE html>
<html lang="en">
<%- include ('./partials/head') %>
    <body>
        <%- include ('./partials/header') %>
        <section class="bannerppal">
            <img class="hero-desktop" src="/img/hero-desktop.png" alt="img-banner-ppal">
            <img class="hero-mobile" src="/img/hero-mobile.png" alt="img-banner-ppal">
        </section>
        <main class="contenedor">
            <section class="main-container">
                <div class="new-nav">
                    <a href="#">
                        <h3>Todos los productos</h3>
                    </a>
                    </div>
                    <div class="contenedor-productos">
                        <% products.forEach(function(product){%>
                            <article class="product">
                                <a href="/products/detail/<%= product.id %>">
                                    <div class="product-img">
                                        <img src="/img/products/<%= product.Product_Image[0].image %>" alt="product-Image">
                                        <p class="precio">
                                            <span class="currency-symbol">
                                                $
                                            </span>
                                        <%= product.price %>
                                        </p>
                                    </div>
                                    <div class="product-description">
                                        <p class="product-model">
                                            <%= product.name %>
                                        </p>
                                        <div class="product__size-hover">
                                            <ul class="product-size">
                                                <% for (let i = 0; i < product.Product_Size.length; i++){%>
                                                    <li><%= product.Product_Size[i].size %></li>
                                                <% } %>
                                            </ul>
                                        </div>
                                    </div>
                                </a>
                            </article>
                        <% }) %>
                    </div>
            </section>
                    </main>
                    <%- include ('./partials/footer') %>
            </body>
        </html>