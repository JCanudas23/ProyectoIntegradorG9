<!DOCTYPE html>
<html lang="en">
<%- include ('./partials/head') %>
    <body>
        <%- include ('./partials/header') %>
            <main class="contenedor">
                <section class="detail-container">
                    <div class="detail-img">
                        <% for (let i = 0; i < product.Product_Image.length; i++){ %>
                            <img src="/img/products/<%= product.Product_Image[i].image %>" alt="product-image">
                        <% } %>
                    </div>
                    <div class="product-details">
                        <h4 class="product-name">
                            <%= product.name %>
                        </h4>
                        <p class="detail_price">
                            $ <%= product.price %>
                        </p>
                            <p class="product__detail-description">
                                <%= product.description %>
                            </p>
                            <div>
                                <p class="size-us">SIZE US:</p>
                                 <ul class="product__detail-size">
                                    <% for (let i = 0; i < product.Product_Size.length; i++){ %>
                                        <li id="size" class="detail-size"><%= product.Product_Size[i].size %></li>
                                    <% } %>
                                </ul>
                            </div>
                        <% if (locals.isLogged == 'admin') {%>        
                            <button type="submit" class="default_button">    
                                <a class="default_button" href="/products/edit/<%= product.id %>" class="action-button edit">Editar producto</a>
                            </button>
                            
                            <form action="/products/delete/<%= product.id %>?_method=DELETE" method="POST">
                                <button class="default_button" type="submit" class="boton-enviar" class="action-button delete">Eliminar Producto</button>	
                            </form>
                        <% } %>
                        <div>
                            <% if (locals.isLogged != 'admin') {%>   
                            <button type="submit" class="default_button">
                                <li><a class="default_button" href="/products/productCart">Agregar al carrito</a>
                            </button>
                            <% } %>
                        </div>
                    </div>
                </section>
            </main>
            <%- include ('./partials/footer') %>
    </body>

</html>